RewriteEngine On

# Ensure existing files & directories are served normally
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Rewrite page requests to /app/page/
RewriteRule ^([a-zA-Z0-9_-]+)$ app/page/$1.php [L]

# Allow access to everything except /app/layout/
<Directory "/app/layout">
    Require all denied
</Directory>

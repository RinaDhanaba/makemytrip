# Enable Rewrite Engine
RewriteEngine On

# Block Direct Access to Layout Folder
RewriteRule ^app/layout/ - [F,L]

# Prevent rewriting already rewritten URIs (inside app/page)
RewriteCond %{REQUEST_URI} !^/app/page/

# Ignore existing files and directories (relative to DocumentRoot)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Rewrite everything to app/page/<requested>.php (allowing an optional trailing slash)
RewriteRule ^(.*)/?$ app/page/$1.php [L,QSA]

# Custom 404 Page
ErrorDocument 404 /app/page/404.php

# Default Index Page
DirectoryIndex app/page/index.php

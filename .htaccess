# Enable Rewrite Engine
RewriteEngine On

# Ignore Existing Files & Folders
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Dynamic Rewrite for Unlimited Nested Folders
RewriteRule ^([a-zA-Z0-9_-]+(?:/[a-zA-Z0-9_-]+)*)/?$ app/page/$1.php [L,QSA]

# Remove .php Extension
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L,QSA]

# Block Direct Access to Layout Files
RewriteCond %{REQUEST_URI} ^/app/layout/.*$
RewriteRule ^.*$ - [F,L]

# Prevent Access to Sensitive Files
<FilesMatch "\.(env|git|htpasswd|ini|log|bak)$">
    Require all denied
</FilesMatch>

# Custom 404 Page
ErrorDocument 404 /app/page/404.php

# Prevent Direct Access to .htaccess
<Files .htaccess>
    Require all denied
</Files>

# Set Default Index Page
DirectoryIndex app/page/index.php

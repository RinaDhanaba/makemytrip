RewriteEngine On

# Redirect requests to corresponding PHP files in /app/page/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(flights/listing)$ app/flights/flights-listing.php [L]
RewriteRule ^(hotel/listing)$ app/Hotel/Hotel-listing.php [L]
RewriteRule ^([^/]+)$ app/page/$1.php [L]

# Block direct access to layout files
<Directory "app/layout">
    Order Allow,Deny
    Deny from all
</Directory>
